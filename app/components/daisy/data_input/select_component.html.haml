- if has_any_label?
  = part(:label_wrapper) do
    - if has_start_label?
      - if start?
        = start
      - else
        = part(:start) do
          = @start

    - if has_floating_label?
      - if floating?
        = floating
      - else
        = part(:floating) do
          = @floating

    = part(:component) do
      - if @placeholder_text
        = part(:placeholder) do
          = @placeholder_text

      - if include_blank?
        %option{ value: "" }

      - if options?
        - options.each do |option|
          - option.set_loco_parent(component_ref)
          = option.call
      - elsif default_options.present?
        - default_options.each do |option|
          - option.set_loco_parent(component_ref)
          = render(option)
      - elsif content?
        = content

    - if has_end_label?
      - if end?
        = self.send(:end)
      - else
        = part(:end) do
          = @end

- else
  = part(:component) do
    - if @placeholder_text
      = part(:placeholder) do
        = @placeholder_text

    - if include_blank?
      %option{ value: "" }

    - if options?
      - options.each do |option|
        - option.set_loco_parent(component_ref)
        = option.call
    - elsif default_options.present?
      - default_options.each do |option|
        - option.set_loco_parent(component_ref)
        = render(option)
    - elsif content?
      = content
