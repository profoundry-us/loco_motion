# Windsurf Rules File
# This file specifies which commands are safe to auto-run without explicit user approval

# Allow running and testing through Docker
allow_command "make loco-test"
allow_command "make demo-restart"

# Allow Git status and diff commands
allow_command "git status"
allow_command "git diff *"
allow_command "git log *"

# Allow listing files and directories
allow_command "ls *"
allow_command "ls -la *"
allow_command "ls -l *"

# Allow safe Docker commands
allow_command "docker compose ps"
allow_command "docker compose ps *"
